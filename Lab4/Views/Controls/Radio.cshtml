@using Lab4.Models
@model RadioModel
@{
    ViewBag.Title = "Radio";
}
<h2>Radio</h2>
@if (Model == null) {
<form asp-controller="Controls" asp-action="Radio" class="form-group col-md-5">
    <div class="form-group">
        <label asp-for="Month"></label>
        @foreach (var month in Enum.GetNames(typeof(Month))) {
            <div class="form-check">
                <input type="radio" asp-for="Month" class="form-check-input" value="@month" required/>
                <label class="form-check-label">@month</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-outline-secondary btn-sm">Submit</button>
</form>
}
else {
    <form asp-controller="Controls" asp-action="Radio" class="form-group">
        <div class="row container">
            <label asp-for="Month" class="col-form-label font-weight-bold col-md-3 text-md-right"></label>
            <input type="text" class="col form-control-plaintext pl-3 pl-md-0" value="@Model.Month.ToString()" readonly />
        </div>
    </form>
}