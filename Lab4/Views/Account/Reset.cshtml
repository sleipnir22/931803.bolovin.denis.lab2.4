@model Lab4.ViewModels.ResetStep1Model
@{
    ViewBag.Title = "Reset password";
}
<h2>Reset password</h2>

<form asp-controller="Account" asp-action="Reset" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <!-- Email -->
    <div class="form-group">
        <label asp-for="Email" class="font-weight-bold"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@@</span>
            </div>
            <input asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Send me a code" name="action" class="btn btn-primary btn-sm"/>
        <input type="submit" value="I have a code" name="action" class="btn btn-outline-secondary btn-sm"/>
    </div>
</form>