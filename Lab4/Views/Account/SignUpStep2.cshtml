@using Lab4.ViewModels
@model Lab4.ViewModels.SignUpStep2Model
@{
    ViewBag.Title = "SignUp";
}
<h2>Sign up</h2>

<form asp-controller="Account" asp-action="SignUpStep2" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <!-- Email -->
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@@</span>
            </div>
            <input asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email"></span>
    </div>
    
    <!-- Password -->
    <div class="form-group">
        <label asp-for="Password" class="font-weight-bold"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>

    <!-- Confirm password -->
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    
    <!-- Remember me -->
    <div class="form-check form-group">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <!-- Submit -->
    <div class="form-group">
        <input type="submit" value="Complete sign up" class="btn btn-primary" />
    </div>
</form>