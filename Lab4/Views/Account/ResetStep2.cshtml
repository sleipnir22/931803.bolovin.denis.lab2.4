@model Lab4.ViewModels.ResetStep2Model
@{
    ViewBag.Title = "Reset password";
}
<h2>Reset password</h2>

<form asp-controller="Account" asp-action="ResetStep2" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <!-- Email -->
    <div class="form-group">
        <label asp-for="Code" class="font-weight-bold"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Verify" class="btn btn-outline-secondary btn-sm" />
    </div>
</form>